# Application environment (e.g., local, development, production)
NODE_ENV=local

# Database connection URL via Supabase (connection pooling)
# Get this from your Supabase project settings > Database > Connection string
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-1-us-east-2.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct database connection URL (used for migrations)
# Get this from your Supabase project settings > Database > Connection string (without pooling)
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-1-us-east-2.pooler.supabase.com:5432/postgres"

# Supabase URL
# Get this from your Supabase project settings > API > Project URL
SUPABASE_URL="https://[PROJECT-REF].supabase.co"

# Supabase public key (anon key)
# Get this from your Supabase project settings > API > Project API keys > anon public
SUPABASE_ANON_KEY="your-anon-key-here"

# Supabase service role key
# Get this from your Supabase project settings > API > Project API keys > service_role
# WARNING: Keep this secret! Never commit to git or expose in frontend
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# Frontend URL (URL of your React/Next.js frontend)
# Use comma-separated list for multiple origins
# Development: FRONTEND_URL="http://localhost:3000"
# Production: FRONTEND_URL="https://credit-card-planner.vercel.app,http://localhost:3000"
FRONTEND_URL="http://localhost:3000"

# Server Port (backend server port)
PORT=3001
