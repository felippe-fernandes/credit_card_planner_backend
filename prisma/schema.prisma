generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String
  createdAt DateTime  @default(now())
  phone     String?
  editedAt  DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  cards        Card[]
  categories   Category[] // Agora as categorias pertencem ao usuário
  dependents   Dependent[]
  transactions Transaction[]
}

model Dependent {
  id        String    @id @default(cuid())
  userId    String
  name      String
  createdAt DateTime  @default(now())
  editedAt  DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  Transaction Transaction[]
}

model Card {
  id        String    @id @default(cuid())
  userId    String
  name      String
  bank      String
  flag      String
  limit     Decimal
  dueDay    Int
  payDay    Int
  createdAt DateTime  @default(now())
  editedAt  DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
}

model Transaction {
  id               String    @id @default(cuid())
  cardId           String
  userId           String
  dependentId      String?
  purchaseName     String
  purchaseCategory String
  description      String
  amount           Decimal
  date             DateTime
  installments     Int       @default(1)
  createdAt        DateTime  @default(now())
  editedAt         DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  card      Card       @relation(fields: [cardId], references: [id], onDelete: Cascade)
  dependent Dependent? @relation(fields: [dependentId], references: [id])
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Category {
  id        String    @id @default(cuid())
  name      String
  icon      String    @default("➕")
  color     String    @default("#000000")
  userId    String // Agora o usuário precisa estar vinculado
  createdAt DateTime  @default(now())
  editedAt  DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
