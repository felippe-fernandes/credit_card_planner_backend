generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  name  String
  phone String?
  role  Role    @default(USER)

  createdAt DateTime  @default(now())
  editedAt  DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  cards        Card[]
  categories   Category[]
  dependents   Dependent[]
  Invoice      Invoice[]
  transactions Transaction[]
}

model Dependent {
  id     String @id @default(cuid())
  userId String
  name   String

  createdAt DateTime  @default(now())
  editedAt  DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  Transaction Transaction[]
}

model Card {
  id             String  @id @default(cuid())
  userId         String
  name           String
  bank           String
  flag           String
  limit          Decimal
  dueDay         Int
  payDay         Int
  availableLimit Decimal @default(0) @db.Decimal
  simulatedLimit Decimal @default(0) @db.Decimal

  createdAt DateTime  @default(now())
  editedAt  DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  Invoice      Invoice[]
  transactions Transaction[]
}

model Transaction {
  id                String    @id @default(cuid())
  cardId            String
  userId            String
  dependentId       String?
  purchaseName      String
  purchaseCategory  String
  description       String?
  amount            Decimal
  date              DateTime
  installments      Int       @default(1)
  installmentsValue Decimal[]

  createdAt DateTime  @default(now())
  editedAt  DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  card      Card       @relation(fields: [cardId], references: [id], onDelete: Cascade)
  dependent Dependent? @relation(fields: [dependentId], references: [id])
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([cardId, date], map: "idx_transaction_card_date")
  @@index([dependentId], map: "idx_transaction_dependent")
  @@index([userId, date], map: "idx_transaction_user_date")
}

model Category {
  id     String @id @default(cuid())
  name   String
  icon   String @default("âž•")
  color  String @default("#000000")
  userId String

  createdAt DateTime  @default(now())
  editedAt  DateTime? @default(now()) @updatedAt @db.Timestamp(6)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "idx_category_user")
}

model Invoice {
  id          String        @id @default(dbgenerated("gen_random_uuid()"))
  cardId      String
  userId      String
  month       Int
  year        Int
  totalAmount Decimal       @db.Decimal
  paidAmount  Decimal       @default(0) @db.Decimal
  dueDate     DateTime      @db.Timestamp(6)
  status      InvoiceStatus @default(PENDING)

  createdAt DateTime @default(now()) @db.Timestamp(6)

  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([cardId], map: "idx_invoice_cardId")
  @@index([month, year], map: "idx_invoice_month_year")
  @@index([userId], map: "idx_invoice_userId")
  @@index([userId, dueDate], map: "idx_invoice_user_duedate")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
}
